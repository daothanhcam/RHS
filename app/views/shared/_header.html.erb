<header class="navbar navbar-fixed-top navbar-inverse" id="my-header">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user.nil? %>
          <li class="round-li">
            <%= link_to new_user_session_path do %>
              <span class="glyphicon glyphicon-plus"></span>
            <% end %>
          </li>
        <% else %>
          <li><%= link_to t("address.add_new_address"), new_address_path %></li>
          <li id="fat-menu" class="dropdown header_user">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <% if current_user.avatar.present? %>
                <%= image_tag current_user.avatar.url, class: "img-circle",
                  id: "fix_avatar_on_header" %>
              <% else %>
                <%= image_tag Settings.user.avatar_default, class: "img-circle", 
                  id: "fix_avatar_on_header" %>
              <% end %>
            <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.profile"), user_path(current_user) %></li>
              <li>
                <%= link_to t("layouts.setting"), edit_user_registration_path(current_user) %>
              </li>
              <li>
                <%= link_to t("logout"), destroy_user_session_path,
                method: :delete %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
